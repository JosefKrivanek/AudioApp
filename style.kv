#:kivy 2.1.0

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        padding: 10
        spacing: 10

        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10
            Button:
                text: "Cancel"
                background_color: 1, 0, 0, 1  
                on_release: root.cancel()
            Button:
                text: "Load"
                background_color: 0, 1, 0, 1  
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        padding: 10
        spacing: 10

        TextInput:
            id: text_input
            size_hint_y: None
            height: 50
            multiline: False
            font_size: 20

        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = filechooser.selection and filechooser.selection[0] or ''

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10
            Button:
                text: "Cancel"
                background_color: 1, 0, 0, 1  
                on_release: root.cancel()
            Button:
                text: "Save"
                background_color: 0, 1, 0, 1  
                on_release: root.save(filechooser.path, text_input.text)

<Root>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 20
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1  
            Rectangle:
                size: self.size
                pos: self.pos

        Button:
            text: "Načíst soubor"
            size_hint_y: None
            height: 60
            background_color: 0, 0.6, 0.6, 1  
            font_size: 20
            on_press: root.show_load(self)

        Button:
            text: "Uložit"
            size_hint_y: None
            height: 60
            background_color: 0.6, 0.6, 0, 1  
            font_size: 20
            on_press: root.show_save(self)

        Label:
            text: "Distortion"
            color: 0, 0, 0, 1  
            size_hint_y: None
            height: 30
            font_size: 18

        Slider:
            id: distortion_slider
            min: 0
            max: 20
            value: 10
            step: 1
            size_hint_y: None
            height: 50

        Label:
            text: "Gain"
            color: 0, 0, 0, 1  
            size_hint_y: None
            height: 30
            font_size: 18

        Slider:
            id: gain_slider
            min: 0
            max: 40
            value: 20
            step: 1
            size_hint_y: None
            height: 50

        Label:
            text: "Reverb"
            color: 0, 0, 0, 1  
            size_hint_y: None
            height: 30
            font_size: 18

        Slider:
            id: reverb_slider
            min: 0
            max: 1
            value: 0.5
            step: 0.01
            size_hint_y: None
            height: 50

        Label:
            text: "Chorus"
            color: 0, 0, 0, 1  
            size_hint_y: None
            height: 30
            font_size: 18

        Slider:
            id: chorus_slider
            min: 0
            max: 5
            value: 1
            step: 0.1
            size_hint_y: None
            height: 50

        BoxLayout:
            size_hint_y: None
            height: 60
            spacing: 10
            Button:
                text: "Play"
                background_color: 0, 0.6, 0, 1  
                font_size: 20
                on_release: app.play_audio(self)
            Button:
                text: "Stop"
                background_color: 0.6, 0, 0, 1  
                font_size: 20
                on_release: app.stop_audio(self)
